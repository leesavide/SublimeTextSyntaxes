        '2': {name: support.constant.abc}
    - name: meta.field.key.abc
      match: '(^K:)\s*(HP)'
      captures:
        '1': {name: entity.name.function.abc}
        '2': {name: support.constant.abc}
      patterns:
        - include: '#comments'
