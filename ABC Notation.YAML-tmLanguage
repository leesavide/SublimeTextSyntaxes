        - include: '#directive'
    - name: meta.block.svg.abc
      begin: (^I:)\s*(beginsvg)
      beginCaptures:
        '1': {name: keyword.control.abc}
        '2': {name: variable.function.abc punctuation.definition.sequence.begin.abc}
      contentName: source.xml
      end: (^I:)\s*(endsvg)
      endCaptures:
        '1': {name: keyword.control.abc }
        '2': {name: variable.function.abc punctuation.definition.sequence.begin.abc}
      patterns:
