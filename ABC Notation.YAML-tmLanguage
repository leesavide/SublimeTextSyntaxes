# [PackageDev] target_format: plist, ext: tmLanguage
---
fileTypes: [abc]
name: ABC Notation
scopeName: source.abc
uuid: 431a5f26-5897-4146-8415-25a3c4b859c0

patterns:
- include: '#unparsed-text'
- include: '#free-text'
- include: '#abc-tune'
- include: '#field'
- include: '#comment'
- include: '#directive'

repository:
# Global Matches
  abc-comment:
    - name: comment.line.percentage.abc
      match: '\s*(%{1}[^%\n\r].*)'
      captures:
        '1': {name: comment.line.percentage.abc punctuation.definition.comment.abc}
      patterns:
        - include: '#escape'

  # Directive matches _strictly_ on text that MUST contain 2 '%' characters.
  directive:
    name: meta.directive.abc
    match: ((?<!%)%%\s*\b\w+\b)\s+([^%\n]*)
    captures:
      '1': {name: keyword.control.directive.abc punctuation.definition.directive.abc}
      '2': {name: variable.parameter.directive.abc}
    patterns:
    - include: '#escape'

  # Namespaces match at the start of the line, with no exceptions.
  abc-namespace:
    name: meta.namespace.abc
    match: (^%abc(?:-\d\.\d)?)
    captures:
      '1': {name: keyword.control.directive.namespace.abc punctuation.definition.keyword.abc}

# Content Matches
  # File Header
  file-header:
    name: meta.file.header.abc
    begin: \A(^%abc(?:-\d\.\d)?)(?m:.*)
    beginCaptures:
      '1': {name: storage.modifier.version.abc meta.namespace.file.abc meta.preprocessor.abc }
    end: ^\n\s*
    patterns:
      - include: '#comment'
      - include: '#directive'
      - include: '#field-directive'

  # Unmatched text
  unparsed-text:
    - name: meta.unparsed-text.abc
      begin: ^\s*\n\G((?m:.*))
      contentName: string.unquoted.unparsed.abc
      end: ^\n\s*
      patterns:
        - include: '#escape'
        - include: '#comment'
        - include: '#directive'

  # Free Text
  free-text:
    - name: meta.free-text.abc
      begin: (%%\s*begintext)\s+(obeylines|fill|ragged|justify|align|skip)?
      beginCaptures:
        '1': {name: keyword.control.directive.abc punctuation.definition.keyword.abc punctuation.definition.sequence.begin.abc}
        '2': {name: support.variable.directive.abc}
      contentName: string.unquoted.free.abc
      end: (%%)\s*(endtext)
      endCaptures:
        '1': {name: keyword.control.directive.abc punctuation.definition.keyword.abc}
        '2': {name: variable.function.abc punctuation.definition.sequence.end.abc}
      patterns:
      - include: '#unparsed-text'
      - include: '#comment'
      - include: '#directive'
      - include: '#escape'

  # ABC Tune
  abc-tune:
    begin: (^X:)\s*(?=\d+)
    beginCaptures:
      '1': {name: keyword.control.field.abc punctuation.definition.keyword.abc}
      '2': {name: constant.numeric.integer.abc}
    end: ^\n\s*
    patterns:
    - include: '#tune-header'
    - include: '#tune-body'
    - include: '#free-text'

# Child Content Matches
  # Tune Body
  tune-body:
    begin: ^K:.*\n\G
    end: ^\n\s*
    patterns:
    - include: '#abc-comment'

  # Literal Character Escapes, ABC Ligatures, ABC Accents, & HTML / XML Entities
  escape:
  - name: constant.character.escape.abc
    match: (\\%|\\\\|\\u\h{4}|\\[[:punct:]\w]{2})
  - name: constant.character.escape.abc
    match: (&\w+;|&#\d+;|&#x\h+;)

  field-remark:
    name: meta.field.remark.line.abc
    match: '(^r:)([^%\r\n]*)'
    captures:
      '1': {name: punctuation.definition.comment.abc}
      '2': {name: comment.line.abc}
    patterns:
    - include: '#escape'
    - name: comment.line.percentage.abc
      match: '[[:blank:]]*((?<!\\)%{1})([^%\n\r].*)'
      captures:
        '1': {name: comment.line.percentage.abc punctuation.definition.comment.abc}
        '2': {name: comment.line.abc}
    - include: '#directive'

  field-remark-inline:
    name: meta.field.remark.inline.abc
    begin: (\[r:)
    beginCaptures:
      '1': {name:  punctuation.section.brackets.begin.abc punctuation.definition.comment.abc}
    contentName: comment.block.documentation.abc
    end: ((?<!\\)\])
    endCaptures:
      '1': {name: punctuation.section.brackets.end.abc punctuation.definition.comment.abc}

  # Information Fields
  field:
  - name: meta.field.line.abc
    match: (^[A-HL-WZa-qs-z]:)(.*)
    captures:
      '1': {name: keyword.control.field.abc punctuation.definition.keyword.abc}
      '2': {name: variable.parameter.field.abc}
    patterns:
      - include: '#escapes'
      - include: '#comments'
      - include: '#directive'
  # Directive Fields
  - name: meta.field.instruction.abc
    match: '(^I:)\s*(\w+)\s+(.*)'
    captures:
      '1': {name: keyword.control.field.abc punctuation.definition.keyword.abc}
      '2': {name: support.type.directive.abc}
      '3': {name: variable.parameter.directive.abc}
    patterns:
      - include: '#escapes'
      - include: '#comments'
      - include: '#directives'
  # Key Fields
  - name: meta.field.key.abc
    match: '(^K:)\s*(.*)'
    captures:
      '1': {name: keyword.control.field.abc punctuation.definition.keyword.abc}
      '2': {name: variable.parameter.key.abc}
    patterns:
      - include: '#comments'
      - include: '#directive'
  # Tune Index Fields
  - name: meta.field.index.abc
    match: '(^X:)\s*(\d+)'
    captures:
      '1': {name: keyword.control.abc punctuation.definition.keyword.abc}
      '2': {name: meta.toc-list.index.abc constant.numeric.integer.abc}
    patterns:
      - include: '#comments'
      - include: '#directive'

  abc-line-break:
    name: keyword.operator.abc punctuation.terminator.line.abc
    match: ([!\$](?=\s+))

  continuations:
    # Line Continuation
    - name: keyword.operator.abc punctuation.separator.continuation.line.abc
      match: \s*(\\)$\n?
    # Field Continuation
    - name: meta.field.line.continue.abc
      match: (^+:)(.*)
      captures:
        '1': {name: keyword.control.field.abc punctuation.separator.continuation.field.abc}
        '2': {name: variable.parameter.field.abc}
      patterns:
        - include: '#escape'
        - include: '#abc-comment'
        - include: '#directive'

# Tune Body Elements
  note-length:
    - name: constant.numeric.length.note.abc
      match: |-
        ((?:\d*/*(?:\d*)?)|
         (?:\d*>*(?:\d*)?)|
         (?:\d*<*(?:\d*)?))
      captures:
        '1': {name: entity.type.length.note.abc punctuation.definition.length.note.abc}
    - name: constant.numeric.length.note.abc
      match: (\d*/*(?!\.\d+)\d*)
      captures:
        '1': {name: entity.type.length.note.abc punctuation.definition.length.note.abc}

  rest-length:
    - name: constant.numeric.length.rest.abc
      match: |-
        ((?:\d*/*(?:\d*)?)|
         (?:\d*>*(?:\d*)?)|
         (?:\d*<*(?:\d*)?))
      captures:
        '1': {name: entity.type.length.rest.abc punctuation.definition.length.rest.abc}
    - name: constant.numeric.length.rest.abc
      # To avoid matching staccato decorations, do not match on floating-point decimals
      match: (\d*[/<>]*(?!\.\d+))
      captures:
        '1': {name: entity.type.length.rest.abc punctuation.definition.length.rest.abc}

  spacer-length:
    name: constant.numeric.decimal.spacer.abc punctuation.separator.decimal.abc
    match: (\d*(?=\.\d+))

  note:
    name: entity.name.type.note.abc punctuation.definition.entity.note.abc
    match: ([A-Ga-g][,']*)

  rest:
    name: entity.name.type.rest.abc punctuation.definition.entity.rest.abc
    match: "([xz])([[:^space:]]*)?"
    patterns:
      - include: '#note-length'

  # ABC Rest
  abc-rest:
    - match: |-
        ([xyz])((?:[1-9]\d*/*(?:[1-9]\d*)?)|
                (?:[1-9]\d*>*(?:[1-9]\d*)?)|
                (?:[1-9]\d*<*(?:[1-9]\d*)?))?|
        [XZ]([1-9][0-9]*)?|y(\d*(?:\.\d+)?)
      name: meta.code.rest.abc
      captures:
        '1': {name: entity.name.type.rest.abc}
        '2': {name: constant.numeric.length.rest.abc}
    - match: '([xz])([[:^space:]]*)?'
      name: meta.code.rest.abc
      captures:
        '1': {name: entity.name.type.rest.abc}
        '2': {name: constant.numeric.length.rest.abc}

  abc-spacer:
    - match: '(y)(\d+(?:\.\d*)?(?:pt|in|cm)?)?'
      name: meta.code.spacer.abc
      captures:
        '1': {name: support.constant.spacer.abc}

  # ABC Note 
  abc-note:
    name: meta.code.note.abc
    match: '(?:[[:^space:]]*)?([A-Ga-g][,']*)(?:[[:^space:]]*)?'
    captures:
      '1': {name: entity.name.type.note.abc punctuation.definition.entity.note.abc}
    patterns:
      - include: '#grace-note'
      - include: '#abc-chord'
      - include: '#annotation'
      - include: '#decoration'
      - include: '#accidental'
      - include: '#note'
      - include: '#note-length'

  grace-note:
    name: meta.braces.grace-note.abc
    begin: (\{\/?)(?:[[:^space:]]*)
    beginCaptures:
      '1': {name:  punctuation.section.braces.begin.abc}
    end: (\})
    endCaptures:
      '1': {name: entity.name.type.grace-note.abc punctuation.section.braces.end.abc}
    patterns:
      - include: '#note'
      - include: '#rest'
      - include: '#note-length'

  staccato:
    name: punctuation.separator.staccato.abc
    match: \.

  static-macro: 
    name: keyword.operator.macro.static.abc
    match: ~[^n[[:blank:]]]*

  # Inline Fields
  inline-field:
    - name: meta.field.inline.abc
      begin: '(\[[A-HL-WZa-qs-z]:)'
      beginCaptures:
        '1': {name: entity.name.function.abc}
      contentName: variable.parameter.abc
      end: '(\])'
      endCaptures:
        '1': {name: entity.name.function.abc}
    - begin: '(\[I:)(\w+)\s+'
      beginCaptures:
        '1': {name: entity.name.function.abc}
        '2': {name: support.type.instruction.abc}
      contentName: variable.parameter.abc
      end: '(\])'
      endCaptures:
        '1': {name: support.type.abc}
      patterns:
        - include: '#escapes'

  bar-line:
    name: meta.code.barline.abc
    match: ((?:[|\[\]:]*)?\|(?:[|\[\]:]*))(\d(?:[-,]\d)*)?
    captures:
      '1': {name: keyword.operator.barline.abc }

  note-length:
    name: meta.code.note.length.abc
    match: |-
      ((?:[1-9]\d*/*(?:[1-9]\d*)?)|
       (?:[1-9]\d*>*(?:[1-9]\d*)?)|
       (?:[1-9]\d*<*(?:[1-9]\d*)?))
    captures:
      '1': {name: constant.numeric.note-length.abc}

  decoration:
    - match: (?<!\\)![^!%[[:blank:]]]+!
      name: keyword.operator.decoration.abc
    - match: (?<!\\)[-.~uvTHLMPSO]
      name: keyword.operator.symbol.abc

  annotation:
    begin: '((?<!\\)"(?:[_^<>]|@))'
    beginCaptures:
      '1': {name: string.quoted.double.annotation.abc punctuation.definition.string.begin.abc punctuation.keyword.  }
    end: '(")'
    endCaptures:
      '1': {name: keyword.operator.abc}
    contentName: string.quoted.double.abc
    patterns:
      - include: '#escape'

  tuplet:
    match: '((?<!\\)\([1-9](?::\d+(:\d+)?)?)'
    name: meta.code.tuplet.abc constant.numeric.abc

  slur:
    name: meta.code.slur.abc
    begin: '((?<!\\)\()'
    beginCaptures:
      '1': {name: keyword.operator.abc}
    end: '((?<!\\)\))'
    endCaptures:
      '1': {name: keyword.operator.abc}
    patterns:
      - include: '#slurs'

  chord:
    name: meta.code.chord.abc
    begin: '(?<!\\)(\[)'
    beginCaptures:
      '1': {name: keyword.operator.abc}
    end: '(?<!\\)(\])'
    endCaptures:
      '1': {name: keyword.operator.abc}
    patterns:
      - include: '#note'
      - include: '#rest'

  abc-tune:
    name: meta.struct.tune.abc
    begin: '^(X:)\s*(\d+|*)'
    beginCaptures:
      '1': {name: keyword.control.abc punctuation.definition.keyword.abc}
      '2': {name: meta.toc-list.abc }
    end: ^\n\s*\n
    patterns:
      - include: '#inline-field'
      - include: '#annotation'
      - include: '#decoration'
      - include: '#bar-lines'
      - include: '#grace-note'
      - include: '#slur'
      - include: '#tuplet'
      - include: '#abc-note'
      - include: '#abc-comment'
      - include: '#field'
      - include: '#directive'

  embedded-svg:
    - name: meta.block.svg.abc
      begin: (%%)\s*(beginsvg)
      beginCaptures:
        '1': {name: keyword.operator.directive.abc punctuation.definition.keyword.abc punctuation.definition.sequence.begin.abc}
        '2': {name: variable.function.abc punctuation.definition.sequence.begin.abc}
      contentName: source.xml
      end: (%%)\s*(endsvg)
      endCaptures:
